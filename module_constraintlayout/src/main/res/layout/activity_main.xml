<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/acBtn_constraint_layout_flow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ConstraintLayout Flow" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/acBtn_place_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placeholder" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/acBtn_circular_flow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CircularFlow" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/acBtn_layer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Layer" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/acBtn_motion_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MotionLayout" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/acBtn_motion_effect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MotionEffect" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/acBtn_motion_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MotionLabel" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/acBtn_motion_telltales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MotionTelltales" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/acBtn_motion_carousel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Motion Carousel" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/acBtn_grid_helper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grid Helper" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/acBtn_coordinator_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CoordinatorLayout" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/acBtn_web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WebView" />

            <zs.android.module.constraintlayout.WordParticleView
                android:layout_width="match_parent"
                android:layout_height="300dp" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
</layout>
