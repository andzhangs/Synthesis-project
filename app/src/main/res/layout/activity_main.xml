<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/acBtn_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择图片"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/acBtn_crop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定裁剪"
            app:layout_constraintStart_toEndOf="@id/acBtn_select"
            app:layout_constraintTop_toTopOf="parent" />

        <com.canhub.cropper.CropImageView
            android:id="@+id/crop_iv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:cropShape="rectangle"
            app:cropShowCropOverlay="true"
            app:cropGuidelines="off"
            app:cropCenterMoveEnabled="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/acBtn_select" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/acIv_crop"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintTop_toBottomOf="@id/acBtn_select"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>