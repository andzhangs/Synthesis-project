<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.huawei.hms.support.hwid.ui.HuaweiIdAuthButton
            android:id="@+id/hwBtn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            app:hwid_button_theme="hwid_button_theme_full_title"
            app:hwid_color_policy="hwid_color_policy_red"
            app:hwid_corner_radius="hwid_corner_radius_large"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/acBtn_set_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置字体"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/acBtn_load_jar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载Jar"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="@sample/github_user.json/github_users/name[0]" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="@sample/github_user.json/github_users/name[1]" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="@sample/github_user.json/github_users/name[2]" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="@sample/github_user.json/github_users/name[3]" />

        <include layout="@layout/layout" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/acIv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:color/darker_gray" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/acTv_spanned_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>